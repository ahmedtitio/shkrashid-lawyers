{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "functions": {
        "api/**/*.{js,ts}": {
            "runtime": "@vercel/node",
            "memory": 1024,
            "maxDuration": 10
        },
        "app/api/**/*.{js,ts}": {
            "runtime": "@vercel/node",
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "headers": [{
        "source": "/(.*)",
        "headers": [
            { "key": "X-Frame-Options", "value": "DENY" },
            { "key": "X-Content-Type-Options", "value": "nosniff" },
            { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
        ]
    }],
    "cleanUrls": true,
    "trailingSlash": false
}
